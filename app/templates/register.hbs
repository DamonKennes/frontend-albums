{{page-title "Register"}}

<div class="feedback-message">
  {{#if this.loading}}
    <span class="loading">Registering...</span>
  {{/if}}
  {{#if this.errorMessage}}
    <span class="error-message">{{this.errorMessage}}</span>
  {{/if}}
</div>
<form class="registration-form" {{on "submit" this.register}}>
  <div class="form-field">
    <label>
      Name
      <Input @value={{this.name}} placeholder="John Doe" />
    </label>
  </div>
  <div class="form-field">
    <label>
      Username
      <Input @value={{this.nickname}} placeholder="john.doe" />
    </label>
  </div>
  <div class="form-field">
    <label>
      Password
      <Input @value={{this.password}} @type="password" placeholder="*****" />
    </label>
  </div>
  <div class="form-field">
    <label>
      Confirm password
      <Input @value={{this.passwordConfirmation}} @type="password" placeholder="*****" />
    </label>
  </div>
  <button type="submit">Register</button>
</form>