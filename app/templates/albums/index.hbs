{{page-title "Albums"}}

<div class="albums-header">
  <LinkTo @route="albums.new">
    <button class="button" type="button">Add New Album</button>
  </LinkTo>
</div>

<div class="albums-grid">
  {{#each @model as |album|}}
    <AlbumCard @album={{album}} />
  {{else}}
    <p>No albums yet. Add your first album!</p>
  {{/each}}
</div>

{{outlet}}